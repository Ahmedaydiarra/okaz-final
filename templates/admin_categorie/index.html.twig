{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
<section class="mb-auto py-10 lg:py-20">
    <div class=" container w-5/6 md:w-2/3 xl:w-1/2 mx-auto border-rounded px-6 py-10 md:p-10 lg:p-14 shadow-xl">
    <h1 class="text-2xl md:text-3xl lg:text-4xl xl:text-5xl text-center lg:mb-8 mb-6 uppercase text-darkgrey tracking-wide">Categorie Accueil</h1>

    <table class="table">
        <thead>
            <tr>
                <th class="text-center text-xl md:text-2xl md:leading-snug lg:text-3xl text-darkblue font-semibold uppercase">Id</th>
                <th class="text-center text-xl md:text-2xl md:leading-snug lg:text-3xl text-darkblue font-semibold uppercase">Nom</th>
                <th class="text-center text-xl md:text-2xl md:leading-snug lg:text-3xl text-darkblue font-semibold uppercase" >Description</th>
                <th class="text-center text-xl md:text-2xl md:leading-snug lg:text-3xl text-darkblue font-semibold uppercase">Image</th>
                <th class="text-center text-xl md:text-2xl md:leading-snug lg:text-3xl text-darkblue font-semibold uppercase">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td class="text-sm sm:text-lg md:text-xl text-darkgrey">{{ categorie.id }}</td>
                <td class="text-sm sm:text-lg md:text-xl text-darkgrey">{{ categorie.nom }}</td>
                <td class="text-sm sm:text-lg md:text-xl text-darkgrey ">{{ categorie.description }}</td>
                <td class="text-sm sm:text-lg md:text-xl text-darkgrey">{{ categorie.image }}</td>
                <td>
                    <a class="text-sm sm:text-lg md:text-xl text-darkgrey hover-text-orange active-text-orange" href="{{ path('app_admin_categorie_show', {'id': categorie.id}) }}">Voir</a>
                    <a class="text-sm sm:text-lg md:text-xl text-darkgrey hover-text-orange active-text-orange" href="{{ path('app_admin_categorie_edit', {'id': categorie.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="text-sm sm:text-lg md:text-xl text-darkgrey hover-text-orange active-text-orange" href="{{ path('app_admin_categorie_new') }}">Cr√©er une categorie</a>
    </div>
    </section>
{% endblock %}
