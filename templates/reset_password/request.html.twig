{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
<section class="mb-auto py-10 lg:py-20">
    <div class=" container w-5/6 md:w-2/3 xl:w-1/2 mx-auto border-rounded px-6 py-10 md:p-10 lg:p-14 shadow-xl">
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1 class="text-2xl md:text-3xl lg:text-4xl xl:text-5xl text-center lg:mb-8 mb-6 uppercase text-darkgrey tracking-wide">Reset your password</h1>

    {{ form_start(requestForm) }}
            <div class="mb-4 lg:mb-6">
        {{ form_row(requestForm.email) }}
        </div>
        <section class="bg-grey shadow-slate-400 shadow-md py-14 px-10 sm:py-24 sm:px-20 xl:px-40">
        <div>
            <small>
                Enter your email address and we will send you a
                link to reset your password.
            </small>
        </div>
        </section>

        <button class="btn btn-primary">Send password reset email</button>
    {{ form_end(requestForm) }}
    </div>
    </section>
{% endblock %}
