{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<section class="mb-auto py-10 lg:py-20">
<form method="post" class=" container w-5/6 md:w-2/3 xl:w-1/2 mx-auto border-rounded px-6 py-10 md:p-10 lg:p-14 shadow-xl">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            vous ete connecter {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Me deconnecter</a>
        </div>
    {% endif %}

    <h1 class="text-2xl md:text-3xl lg:text-4xl xl:text-5xl text-center lg:mb-8 mb-6 uppercase text-darkgrey tracking-wide">me connecter</h1>

    <div class="mb-4 lg:mb-6">
    <label for="inputEmail" class="text-sm lg:text-lg block mb-2" for="email_login">Email<span class='text-red-600'> *</label>
    <input type="email" value="{{ last_username }}"class="text-xs md:text-sm border rounded border-gray-200 py-2 px-4 w-full outline-slate-800 shadow-md" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    </div>
    <div class="mb-4 lg:mb-6">
    <label for="inputPassword" class="text-sm lg:text-lg block mb-2" for="email_login">Password<span class='text-red-600'> *</label>
    <input type="password"class="text-xs md:text-sm border rounded border-gray-200 py-2 px-4 w-full outline-slate-800 shadow-md" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
    </div>

    <p class='mt-6 lg:mt-10'><span class='text-sm lg:text-base text-red-600'>* </span> Champs obligatoires</p>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <div class="flex justify-center mt-10">
    <button class="text-sm lg:text-base shadow-md rounded-full px-7 py-2 lg:px-10 bg-orange hover-bg-darkgrey text-white font-semibold uppercase tracking-wider" type="submit">
        Sign in
    </button>
    </div>
</form>
</section>
{% endblock %}
