{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
<section class="mb-auto py-10 lg:py-20">
    <div class=" container w-5/6 md:w-2/3 xl:w-1/2 mx-auto border-rounded px-6 py-10 md:p-10 lg:p-14 shadow-xl">
    <h1 class="text-2xl md:text-3xl lg:text-4xl xl:text-5xl text-center lg:mb-8 mb-6 uppercase text-darkgrey tracking-wide">Produit Accueil</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th >Nom</th>
                <th >Description</th>
                <th >Etat</th>
                <th >Dimensions</th>
                <th >Couleur</th>
                <th >Prix</th>
                <th >Disponibilite</th>
                <th >Image</th>
                <th >actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.etat }}</td>
                <td>{{ produit.dimensions }}</td>
                <td>{{ produit.couleur }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.disponibilite }}</td>
                <td>{{ produit.image }}</td>
                <td>
                    <a class="text-sm sm:text-lg md:text-xl text-darkgrey hover-text-orange active-text-orange" href="{{ path('app_admin_produit_show', {'id': produit.id}) }}">Voir</a>
                    <a class="text-sm sm:text-lg md:text-xl text-darkgrey hover-text-orange active-text-orange" href="{{ path('app_admin_produit_edit', {'id': produit.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="text-sm sm:text-lg md:text-xl text-darkgrey hover-text-orange active-text-orange" href="{{ path('app_admin_produit_new') }}">Cr√©er un produit</a>
    </div>
    </section>
{% endblock %}
