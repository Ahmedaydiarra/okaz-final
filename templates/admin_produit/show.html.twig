{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
<section class="mb-auto py-10 lg:py-20">
<div class=" container w-5/6 md:w-2/3 xl:w-1/2 mx-auto border-rounded px-6 py-10 md:p-10 lg:p-14 shadow-xl">
    <h1 class="text-2xl md:text-3xl lg:text-4xl xl:text-5xl text-center lg:mb-8 mb-6 uppercase text-darkgrey tracking-wide">Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ produit.etat }}</td>
            </tr>
            <tr>
                <th>Dimensions</th>
                <td>{{ produit.dimensions }}</td>
            </tr>
            <tr>
                <th>Couleur</th>
                <td>{{ produit.couleur }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Disponibilite</th>
                <td>{{ produit.disponibilite }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ produit.image }}</td>
            </tr>
        </tbody>
    </table>

    <a class="text-sm sm:text-lg md:text-xl text-darkgrey hover-text-orange active-text-orange" href="{{ path('app_admin_produit_index') }}">Retour list</a>

    <a class="text-sm sm:text-lg md:text-xl text-darkgrey hover-text-orange active-text-orange" href="{{ path('app_admin_produit_edit', {'id': produit.id}) }}">Modifier</a>

    {{ include('admin_produit/_delete_form.html.twig') }}
     </div>
    </section>
{% endblock %}
